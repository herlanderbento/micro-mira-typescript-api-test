  "paths": {
    "/v1/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Authentication user",
        "description": "Authentication user",
        "parameters": [
          {
            "name": "devices",
            "in": "header",
            "description": "devices",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "required": true,
                    "type": "string",
                    "example": "johndoe@gmail.com"
                  },
                  "password": {
                    "required": true,
                    "type": "string",
                    "example": "some password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOnsidmFsdWUiOiI5ODU1OWM4Mi03MWQ5LTQyZmMtODFmYy0zMGI0MDRkNTcxYzgifSwiaWF0IjoxNzA4MzM5NTg2LCJleHAiOjE3MDgzNDMxODZ9.tUX7zHNJTCNyIOSrMWk49I5S76UOwJy-8OJ_jTU-pdA"
                        },
                        "refreshToken": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOnsidmFsdWUiOiI5ODU1OWM4Mi03MWQ5LTQyZmMtODFmYy0zMGI0MDRkNTcxYzgifSwiaWF0IjoxNzA4MzM5NTg2LCJleHAiOjE3MDgzNDMxODZ9.tUX7zHNJTCNyIOSrMWk49I5S76UOwJy-8OJ_jTU-pdA"
                        },
                        "user": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "uuid",
                              "example": "98559c82-71d9-42fc-81fc-30b404d571c8"
                            },
                            "name": {
                              "type": "string",
                              "example": "John Doe"
                            },
                            "email": {
                              "type": "string",
                              "example": "John Doe"
                            },
                            "password": {
                              "type": "string",
                              "example": "johndoe@gmail.com"
                            },
                            "phone": {
                              "type": "string",
                              "example": "+244 000 111 222"
                            },
                            "status": {
                              "type": "string",
                              "example": "pending"
                            },
                            "isPhoneVerified": {
                              "type": "boolean",
                              "example": false
                            },
                            "isEmailVerified": {
                              "type": "boolean",
                              "example": false
                            },
                            "createdAt": {
                              "type": "date",
                              "example": "2024-02-19T10:46:26.694Z"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "string",
                      "example": "Email or password incorrect!"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "email is a required field; email must be a valid email"
                        },
                        "password": {
                          "type": "string",
                          "example": "password is a required field"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
